{
	"compileOnSave": false,
	"ts-node": {
		"transpileOnly": true
	},
	"compilerOptions": {
		"ignoreDeprecations": "5.0",
		"target": "ESNext",
		"moduleResolution": "Node",
		"removeComments": true,
		"module": "CommonJS",
		"lib": [
			"es2016",
			"es2018",
			"es2020",
			"dom"
		],
		"strict": true,
		"baseUrl": "./",
		"rootDirs": [
			"src",
			"test",
			"database"
		],
		"outDir": "./dist",
		"paths": {
			"migrations/*": [
				"./database/migrations/*"
			],
			"src/*": [
				"./src/*"
			],
			"test/*": [
				"./test/*"
			],
			"database/*": [
				"./database/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types"
		],
		"types": [
			"node"
		],
		"noImplicitAny": true,
		"strictNullChecks": true,
		"strictFunctionTypes": true,
		"noImplicitThis": true,
		"declaration": false,
		"strictPropertyInitialization": false,
		"resolveJsonModule": true,
		"alwaysStrict": true,
		"noImplicitReturns": false,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
		"forceConsistentCasingInFileNames": true,
		"importHelpers": true,
		"skipLibCheck": true,
		"suppressImplicitAnyIndexErrors": true
	},
	"include": [
		"database/migrations/**/*",
		"database/assets/**/*",
		"src/**/*",
		"test/**/*",
		"knexfile.ts",
		"node_modules/pg-protocol/dist/connection.d.ts",
		"index.ts"
	],
	"exclude": [
		"node_modules",
		"dist",
		"**/*.spec.ts",
		"**/*.spec.tsx",
		"**/*.test.ts",
		"**/*.test.tsx",
		"__tests__"
	]
}
